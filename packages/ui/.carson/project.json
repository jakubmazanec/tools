{
  "template": "@jakubmazanec/carson-templates:projects/react-library",
  "overrides": {
    "packageJson": {
      "exports": {
        ".": "./build/main.js",
        "./development": "./build/development.js",
        "./styles": "./build/styles.css"
      }
    },
    "tsconfig": {
      "compilerOptions": {
        "exactOptionalPropertyTypes": false
      }
    },
    "tsdownConfig": {
      "entry": ["source/main.ts", "source/development.ts"],
      "copy": [
        "source/styles.css",
        "source/inter-variable-italic.woff2",
        "source/inter-variable.woff2"
      ]
    },
    "storybookConfig": {
      "stories": [
        "../stories/Introduction.mdx",
        "../stories/**/*.mdx",
        "../stories/**/*.stories.@(js|jsx|mjs|ts|tsx)"
      ]
    }
  }
}
