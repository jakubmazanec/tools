{
  "name": "@jakubmazanec/fs-utils",
  "version": "0.2.3",
  "description": "Collection of utilities for working with file system.",
  "repository": {
    "type": "git",
    "url": "git@github.com:jakubmazanec/tools.git",
    "directory": "packages/fs-utils"
  },
  "license": "LGPL-3.0-only",
  "author": "Jakub Mazanec <jakub@mazanec.dev>",
  "sideEffects": false,
  "type": "module",
  "exports": "./build/main.js",
  "files": [
    "build",
    "source"
  ],
  "scripts": {
    "build": "del-cli build tsconfig.tsbuildinfo && esbuild \"source/**/*\" --platform=node --target=node20.8 --outdir=build --sourcemap && tsc",
    "clean": "del-cli coverage build *.tsbuildinfo",
    "develop": "concurrently \"esbuild \"source/**/*\" --platform=node --target=node20.8 --outdir=build --sourcemap --watch\" \"tsc --watch\"",
    "document": "del-cli docs && typedoc --options typedoc.config.cjs",
    "format": "prettier . --write --ignore-unknown",
    "lint": "eslint .",
    "test": "del-cli coverage && vitest run --coverage --passWithNoTests",
    "typecheck": "tsc --project tsconfig.typecheck.json"
  },
  "dependencies": {
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "@jakubmazanec/eslint-config": "^3.2.0",
    "@types/fs-extra": "^11.0.4",
    "@types/lodash": "^4.14.202",
    "@types/node": "^22.9.0",
    "@vitest/coverage-v8": "^2.1.4",
    "concurrently": "^9.1.0",
    "del-cli": "^6.0.0",
    "esbuild": "^0.21.4",
    "eslint": "^8.56.0",
    "lodash": "^4.17.21",
    "prettier": "^3.3.0",
    "prettier-plugin-packagejson": "^2.5.0",
    "typedoc": "^0.26.11",
    "typedoc-plugin-markdown": "^4.2.10",
    "typescript": "^5.6.3",
    "vitest": "^2.1.4"
  },
  "packageManager": "npm@10.9.0",
  "engines": {
    "node": "^22.11.0"
  }
}
