{
  "name": "@jakubmazanec/eslint-config",
  "version": "4.1.3",
  "description": "ESLint config for TypeScript projects.",
  "repository": {
    "type": "git",
    "url": "git@github.com:jakubmazanec/tools.git",
    "directory": "packages/eslint-config"
  },
  "license": "MIT",
  "author": "Jakub Mazanec <jakub@mazanec.dev>",
  "sideEffects": false,
  "type": "module",
  "exports": "./build/main.js",
  "files": [
    "build",
    "source"
  ],
  "scripts": {
    "build": "del-cli build tsconfig.tsbuildinfo && esbuild \"source/**/*\" --platform=node --target=node22.13 --outdir=build --sourcemap && tsc",
    "check-rules": "tsx tools/check-rules/main.ts",
    "clean": "del-cli coverage build *.tsbuildinfo",
    "format": "prettier . --write --ignore-unknown",
    "lint": "eslint .",
    "typecheck": "tsc --project tsconfig.typecheck.json"
  },
  "dependencies": {
    "@eslint-community/eslint-plugin-eslint-comments": "^4.4.1 ",
    "@stylistic/eslint-plugin": "^3.0.1",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vitest/eslint-plugin": "^1.1.25",
    "confusing-browser-globals": "^1.0.11",
    "eslint-config-prettier": "^10.0.1",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-n": "^17.15.1",
    "eslint-plugin-perfectionist": "^4.7.0",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-compiler": "^19.0.0-beta-e552027-20250112",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-testing-library": "^7.1.1",
    "eslint-plugin-unicorn": "^56.0.1",
    "globals": "^15.14.0"
  },
  "devDependencies": {
    "@types/confusing-browser-globals": "^1.0.3",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/eslint-plugin-jsx-a11y": "^6.10.0",
    "@types/node": "^22.12.0",
    "del-cli": "^6.0.0",
    "esbuild": "^0.24.2",
    "eslint": "^9.19.0",
    "prettier": "^3.4.2",
    "prettier-plugin-packagejson": "^2.5.8",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  },
  "peerDependencies": {
    "eslint": "^9.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "peerDependenciesMeta": {
    "prettier": {
      "optional": true
    }
  },
  "packageManager": "npm@10.9.0",
  "engines": {
    "node": "^22.13.0"
  }
}
